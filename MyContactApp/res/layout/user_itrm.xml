<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEFEF"
    >
    <ImageButton 
        android:id="@+id/user_list_photo"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_margin="5dip"
        android:background="@drawable/user_photo"
        />
    <TextView 
        android:id="@+id/user_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_toRightOf="@id/user_list_photo"
        android:layout_alignTop="@id/user_list_photo"
        android:textSize="7pt"
        android:textStyle="bold"
        android:text="蚂蚁"
        android:maxLength="10"
        />
    <TextView 
        android:id="@+id/user_list_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_toRightOf="@id/user_list_photo"
        android:layout_alignBottom="@id/user_list_photo"
        android:textSize="7pt"
        android:textStyle="bold"
        android:text="12345678901"
        android:maxLength="20"/>
    
</RelativeLayout>